{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    }
  },
  "include": ["config/jest/setupTests.ts", "src/**/**.ts", "src/**/**.tsx"]
}
